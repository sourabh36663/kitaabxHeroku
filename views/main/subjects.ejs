<% const yearify = ["0", "I", "II", "III", "IV"]; %>
<% const branchify = {"CS" : "Computer Science","IT" : "Information Techology","MXTC" : "Mechatronics","EXTC" : "Electronics & Telecommunication","CIVIL" : "Civil","MECH" : "Mechanical"} %>

<%- include ../partials/head.ejs %>
<style>
  .subject{
    height: 220px;
    background-color: gray;
    border-radius: 2%;
    padding: 10px;
  }
  .subject-logo{
    height: 130px;
    background-color: coral;
    padding: auto;
  }
  .subject-logo h1{
    font-size: 4rem;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
  }
  /* .subject-logo.large-name h1{
    font-size: 5.5rem;
  }
  .subject-logo.very-large-name h1{
    font-size: 3.5rem;
  } */
  .subject-name{
    height: 70px;
    background-color: steelblue;
  }
  .subject-name p{
    font-weight: bold;
    font-size: 1.2rem;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
  }
  /* .jumbotron{
    height: 14rem;
  } */
  .subjects-branch{
    font-size: 4rem;
  }
  .subjects-year{
    font-size: 2rem;
  }
</style>

<%- include ../partials/header.ejs %>      
  <main>
    <div class="container">
        <div class="jumbotron">
          <h1 class="subjects-branch"><%= branchify[query.branch] %></h1>
          <h2 class="subjects-year"><%= yearify[query.year] %> year</h2>
        </div>
        <div class="row">
          <% subjects.forEach(subject => { %>
            <div class="col-lg-3 col-md-6 mt-5">
                <div class="subject shadow" style="cursor: pointer;" onmouseover="hovered(this)" onmouseout="removed(this)" onclick="javascript:location.href= '/subject/<%= subject._id %>' ">
                  <div class="subject-logo text-center"><h1><%= subject.shortForm %></h1></div>
                  <div class="subject-name text-center"><p><%= subject.title %></p></div>
              </div>
          </div>
          <% }) %>
        </div>
      </div>
  </main>
<%- include ../partials/footer.ejs %>